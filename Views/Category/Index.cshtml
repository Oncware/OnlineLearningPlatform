@model List<Category>
@inject IHttpContextAccessor HttpContextAccessor

<br />
<br />
<br />
<br />
<br />
<partial name="_Notification" />
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-3 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary form-control">
                <i class="bi bi-plus-circle"></i>  Create New Category
            </a>
        </div>
        <div class="col-3 text-end">
            <a href="@Url.Action("Index", "Users")" class="btn btn-secondary form-control">Back to Admin Dashboard</a>
        </div>
    </div>


    <table class="table table-bordered table stripped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Dispay Order
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="bi  bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-danger mx-2" onclick="deleteItem('@Url.Action("Delete", "Category", new { id = item.Id })')">
                                <i class="bi  bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/delete.js"></script>
