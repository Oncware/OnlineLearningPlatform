@model JustLearn1.Models.Order
@{
    ViewData["Title"] = "Checkout";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Checkout" method="post" role="form">

    <div class="container">
        <div class="mt-5">
            <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-4">
                <h3 class="fs-5 fw-bolder m-0 lh-1">Shipping Address</h3>
            </div>
            <div class="row">
                <!-- Card Details -->
                <div class="col-12">
                    <div class="form-group">
                        <label class="form-label">Card Details</label>
                        <input type="text" class="form-control mb-2" asp-for="CreditNumber" placeholder="Card Number" required="">
                        <div class="d-flex justify-content-between">
                            <input type="text" class="form-control" asp-for="ExpirationDate" placeholder="MM/YYYY" style="width: 45%;" required="">
                            <input type="text" class="form-control" asp-for="CVC" placeholder="CVC" style="width: 45%;" required="">
                        </div>
                    </div>
                </div>
                <!-- Cardholder Name -->
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">Cardholder Name</label>
                        <input type="text" class="form-control" asp-for="Name" placeholder="" required="">
                    </div>
                </div>
                <!-- Phone Input -->
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Phone" class="form-label">Phone</label>
                        <input type="tel" class="form-control" asp-for="Phone" placeholder="">
                    </div>
                </div>
                <!-- Address Input -->
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="Address" class="form-label">Address</label>
                        <input type="text" class="form-control" asp-for="Address" placeholder="123 Some Street Somewhere" required="">
                    </div>
                </div>
            </div>

            <div class="col-auto mbr-section-btn align-center">
                <button type="submit" class="btn btn-primary display-4">Place Order</button>
            </div>
        </div>
    </div>
</form>
