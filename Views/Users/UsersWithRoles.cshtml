<div class="card col-md-8 offset-md-2">

    <div class="card-header bg-primary text-white">
        <h3>Users and Their Roles</h3>
    </div>

    <div class="card-body">

        <div class="d-flex justify-content-between mb-3">
            <a href="@Url.Action("Index","Users")" class="btn btn-info">Back to Admin Dashboard</a>
            <a href="@Url.Action("Create","Users")" class="btn btn-success">Add New User</a>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <a href="@Url.Action("Edit", "Users", new { userId = user.UserId })" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <button class="btn btn-danger" onclick="deleteItem('@Url.Action("Delete", "Users", new { userId = user.UserId })')">Delete</button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>

    <div class="card-footer">
        <p>
            Total Users: <span class="badge bg-primary">@Model.Count</span>
        </p>
    </div>

</div>

<script src="~/js/delete.js"></script>
